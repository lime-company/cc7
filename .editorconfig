# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# C++
[*.{cpp,h}]
charset = utf-8
indent_style = space
indent_size = 4

# ObjC/C++
[*.{m,mm}]
charset = utf-8
indent_style = space
indent_size = 4

# Shell
[*.sh]
charset = utf-8
indent_style = space
indent_size = 4
